<p id="notice"><%= notice %></p>

<h1>Listing Staff Members</h1>

<table>
  <thead>
    <tr>
      <th>Max hours per day</th>
      <th>Name</th>
      <th>Code</th>
      <th>Score</th>
      <th>Min gap</th>
      <th>Max gap</th>
      <th>Type</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @staff_members.each do |staff_member| %>
      <tr>
        <td><%= staff_member.max_hours_per_day %></td>
        <td><%= staff_member.name %></td>
        <td><%= staff_member.code %></td>
        <td><%= staff_member.score %></td>
        <td><%= staff_member.min_gap %></td>
        <td><%= staff_member.max_gap %></td>
        <td><%= staff_member.type %></td>
        <td><%= staff_member.email %></td>
        <td><%= link_to 'Show', staff_member %></td>
        <td><%= link_to 'Edit', edit_staff_member_path(staff_member) %></td>
        <td><%= link_to 'Destroy', staff_member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

